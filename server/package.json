{
  "name": "@heinz-95729/server",
  "version": "0.1.0",
  "description": "A simple bookstore API built with koa and Yoga",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": ">=18.14.1"
  },
  "type": "module",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "test": "supposed",
    "test:ci": "supposed -r tap,summary --no-color",
    "test:coverage:ci": "c8 --reporter=text --reporter=text-summary pnpm run test:ci",
    "coverage:ci": "mkdir -p ./coverage && touch ./coverage/lcov.info; c8 report --reporter=text-lcov > ./coverage/lcov.info"
  },
  "keywords": [],
  "author": "losandes",
  "license": "MIT",
  "nodemonConfig": {
    "delay": 200,
    "watch": [
      ".",
      "../server-lib"
    ],
    "ignore": [
      "server/data/*"
    ],
    "ext": "js,json,graphql"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.5.16",
    "@graphql-tools/load": "^7.8.13",
    "@graphql-tools/schema": "^9.0.17",
    "@graphql-yoga/plugin-disable-introspection": "^0.5.1",
    "@heinz-95729/auth": "link:../server-lib/auth",
    "@heinz-95729/users": "link:../server-lib/users",
    "@keyv/sqlite": "^3.6.5",
    "@koa/cors": "^4.0.0",
    "@paralleldrive/cuid2": "^2.2.0",
    "@polyn/logger": "^1.0.2",
    "@robotsandpencils/koa-errors": "^0.1.3",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-yoga": "^3.7.3",
    "jsonwebtoken": "^9.0.0",
    "keyv": "^4.5.2",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.4.0",
    "koa-helmet": "^6.1.0",
    "koa-router": "^12.0.0",
    "rate-limiter-flexible": "^2.4.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^18.15.10",
    "c8": "^7.13.0",
    "coveralls": "^3.1.1",
    "nodemon": "^2.0.22",
    "supposed": "^1.3.3",
    "unexpected": "^13.1.0"
  }
}
