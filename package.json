{
  "name": "@heinz-95729/project",
  "version": "0.1.0",
  "description": "A simple bookstore built with a VueJS web app and a NodeJS server",
  "private": true,
  "engines": {
    "node": ">=18.14.1"
  },
  "type": "module",
  "bin": {
    "cuid": "./bin/cuid.js",
    "repo-init": "./bin/repo-init.js"
  },
  "scripts": {
    "build": "cd client; pnpm run build",
    "build:preview": "cd client; pnpm run preview",
    "dev:server": "cd server; pnpm run dev",
    "dev:client": "cd client; pnpm run dev",
    "dev": "concurrently \"pnpm run dev:*\" --raw --kill-others",
    "lint:client": "cd client; eslint . & pnpm run lint",
    "lint:server": "cd server; eslint .",
    "lint:server-lib": "cd server/lib; eslint .",
    "lint:server-packages": "cd server/packages; eslint .",
    "lint": "pnpm run lint:client & pnpm run lint:server & pnpm run lint:server-lib & pnpm run lint:server-packages",
    "test:client": "cd client; pnpm test",
    "test:server": "cd server; supposed -r nyan",
    "test:server-lib": "cd server/lib; supposed -r nyan",
    "test:server-packages": "cd server/packages; supposed -r nyan",
    "test": "pnpm run test:client & pnpm run test:server & pnpm run test:server-lib & pnpm run test:server-packages",
    "watch:test:client": "nodemon --watch lib -e js --exec 'pnpm run test:client'",
    "watch:test:server": "nodemon --watch lib -e js --exec 'pnpm run test:server'",
    "watch:test:server-lib": "nodemon --watch server/lib -e js --exec 'pnpm run test:server-lib'",
    "watch:test:server-packages": "nodemon --watch server/packages -e js --exec 'pnpm run test:server-packages'",
    "watch:test": "concurrently \"pnpm run watch:test:*\" --raw --kill-others"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/losandes/heinz-95729-project.git"
  },
  "keywords": [],
  "author": "losandes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/losandes/heinz-95729-project/issues"
  },
  "homepage": "https://github.com/losandes/heinz-95729-project#readme",
  "devDependencies": {
    "@paralleldrive/cuid2": "^2.2.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.35.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-functional": "^5.0.7",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^2.0.21",
    "supposed": "supposed@^1.3.3",
    "unexpected": "^13.1.0"
  }
}
