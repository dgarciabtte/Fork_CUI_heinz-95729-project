{
  "name": "@heinz-95729/project",
  "version": "0.1.0",
  "description": "A simple bookstore built with a React web app and a NodeJS server",
  "private": true,
  "engines": {
    "node": ">=18.14.1"
  },
  "type": "module",
  "bin": {
    "cuid": "./bin/cuid.js",
    "repo-init": "./bin/repo-init.js"
  },
  "scripts": {
    "dev:server": "cd server; pnpm run dev",
    "dev:client": "cd client; pnpm run dev",
    "dev": "concurrently \"pnpm run dev:*\" --raw --kill-others",
    "// BUILD": "=============================BUILD=============================",
    "build": "cd client; pnpm run build",
    "build:preview": "cd client; pnpm run preview",
    "// LINT": "==============================LINT==============================",
    "lint:client": "eslint client",
    "lint:server": "eslint server",
    "lint:server-domains": "eslint server/domains",
    "lint:server-lib": "eslint server/lib",
    "lint": "eslint .",
    "// TEST": "==============================TEST==============================",
    "test:client": "cd client; pnpm test",
    "test:server": "cd server; supposed -r nyan",
    "test:server-lib": "cd server/lib; supposed -r nyan",
    "test:server-domains": "cd server/domains; supposed -r nyan",
    "test": "pnpm run test:client & pnpm run test:server & pnpm run test:server-lib & pnpm run test:server-domains",
    "watch:test:client": "nodemon --watch lib -e js --exec 'pnpm run test:client'",
    "watch:test:server": "nodemon --watch lib -e js --exec 'pnpm run test:server'",
    "watch:test:server-lib": "nodemon --watch server/lib -e js --exec 'pnpm run test:server-lib'",
    "watch:test:server-domains": "nodemon --watch server/domains -e js --exec 'pnpm run test:server-domains'",
    "watch:test": "concurrently \"pnpm run watch:test:*\" --raw --kill-others"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/losandes/heinz-95729-project.git"
  },
  "keywords": [],
  "author": "losandes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/losandes/heinz-95729-project/issues"
  },
  "homepage": "https://github.com/losandes/heinz-95729-project#readme",
  "devDependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "concurrently": "^7.6.0",
    "eslint": "^8.53.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-functional": "^5.0.8",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^2.0.22",
    "supposed": "^1.3.3",
    "unexpected": "^13.2.1"
  }
}
